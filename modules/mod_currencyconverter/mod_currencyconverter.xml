<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.1"
	client="site">
	<name>Currency converter</name>
	<author>Tom Mwenda</author>
	<creationDate>March 2015</creationDate>
	<copyright>Copyright (C) 2005 - 2013 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>tommwenda@gmail.com</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>3.0.0</version>
	<description>Converts currencies and displays the last conversion requests</description>
	<files>
		<filename module="mod_currencyconverter">mod_currencyconverter.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_currencyconverter.ini</language>
		<language tag="en-GB">en-GB.mod_currencyconverter.sys.ini</language>
	</languages>
    <config>
        <fields name="params">
            <fieldset name="basic" label="Parameters">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
                <field
                        name="max_count"
                        type="text"
                        label="Max count for last query"
                        description="The number of rows to display"
                        default="5">
                </field>
                
                    </fieldset>
           
        </fields>
    </config>

	
</extension>
