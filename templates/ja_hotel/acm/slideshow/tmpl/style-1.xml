  <fields name="slideshow-style">
    <fieldset name="slideshow-basic" label="SLIDESHOW_BASIC_LABEL" description="SLIDESHOW_BASIC_DESC" >
      <field name="full-screen" type="radio" default=""
            label="FULL_SCREEN_LABEL"
            description="FULL_SCREEN_DESC">
          <option value="">No</option>
          <option value="full-screen">Yes</option>
      </field>
    </fieldset>
    <fieldset name="slideshow-content" label="SLIDESHOW_CONTENT_LABEL" description="SLIDESHOW_CONTENT_DESC" multiple="1">
      <field name="block-title" type="textarea" default="" rows="5" cols="40"  label="BLOCK_TITLE_LABEL" description="BLOCK_TITLE_DESC" />
      <field name="block-intro" type="textarea" default="" rows="5" cols="40" label="BLOCK_INTRO_LABEL" description="BLOCK_INTRO_DESC" />
      <field name="block-bg" type="media" default="" label="TPL_MENU_ITEM_MODULE_BACKGROUND_LABEL" description="TPL_MENU_ITEM_MODULE_BACKGROUND_DESC"/>
      <field name="acm-style" type="list" default="dark-style"
          label="ACM_STYLE_LABEL"
          description="ACM_STYLE_DESC">
        <option value="dark-style">DARK_STYLE</option>
        <option value="light-style">LIGHT_STYLE</option>
      </field>
      
      <field name="content-position" type="list" default="position-left"
          label="CONTENT_POSITION_LABEL"
          description="CONTENT_POSITION_DESC">
        <option value="position-left">JGLOBAL_LEFT</option>
        <option value="position-center">JGLOBAL_CENTER</option>
        <option value="position-right">JGLOBAL_RIGHT</option>
      </field>
      
      <field name="text-align" type="list" default="text-left"
          label="TEXT_ALIGN_LABEL"
          description="TEXT_ALIGN_DESC">
        <option value="text-left">JGLOBAL_LEFT</option>
        <option value="text-center">JGLOBAL_CENTER</option>
        <option value="text-right">JGLOBAL_RIGHT</option>
      </field>
	
      <field name="animation-style" type="list" default="none-style"
          label="ANIMATION_STYLE_LABEL"
          description="ANIMATION_STYLE_DESC">
        <option value="none-style">NONE_STYLE</option>
        <option value="rotate-style">ROTATE_STYLE</option>
        <option value="move-style">MOVE_STYLE</option>
        <option value="fade-style">FADE_STYLE</option>
        <option value="scale-style">SCALE_STYLE</option>
      </field>
      
      <field name="slideshow-btn1-text" type="text" size="50" default="" label="SLIDESHOW_BUTTON1_TEXT_LABEL" description="SLIDESHOW_BUTTON1_TEXT_DESC" ></field>
      <field name="slideshow-btn1-class" type="text" size="50" default="" label="SLIDESHOW_BUTTON1_CLASS_LABEL" description="SLIDESHOW_BUTTON1_CLASS_DESC"></field>
      <field name="slideshow-btn1-link" type="text" size="50" default="" label="SLIDESHOW_BUTTON1_LINK_LABEL" description="SLIDESHOW_BUTTON1_LINK_DESC" ></field>
    </fieldset>
  </fields>
